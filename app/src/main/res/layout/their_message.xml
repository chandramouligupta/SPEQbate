<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="60dp"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/avatar"
        android:layout_alignParentLeft="true"
        android:scaleType="centerInside"
        android:background="@drawable/circle"
        android:layout_width="34dp"
        android:layout_height="34dp" />

    <TextView
        android:id="@+id/uname"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/avatar"
        android:fontFamily="@font/heebo_light"
        android:layout_alignTop="@+id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="Rose"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/their_message_body"
        android:fontFamily="@font/heebo_light"
        android:layout_below="@+id/uname"
        android:layout_alignLeft="@+id/uname"
        android:background="@drawable/their_message"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:elevation="2dp"
        android:textSize="18sp"
        android:text="How are you doing? This is a long message that should probably wrap."
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/their_comment_time"
        android:fontFamily="@font/heebo_light"
        android:layout_below="@+id/their_message_body"
        android:layout_alignLeft="@+id/uname"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:elevation="2dp"
        android:textSize="8dp"
        android:text="Comment Date and Time"  />

    <TextView
        android:id="@+id/thumbs_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/heebo_light"
        android:textStyle="bold"
        android:textColor="#231F20"
        android:layout_below="@+id/their_message_body"
        android:layout_toRightOf="@+id/their_comment_time"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:textSize="8dp"
        android:text="Like"/>

    <TextView
        android:id="@+id/thumbs_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/heebo_light"
        android:textStyle="bold"
        android:textColor="#231F20"
        android:layout_below="@+id/their_message_body"
        android:layout_toRightOf="@+id/thumbs_up"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:textSize="8dp"
        android:text="Disike"/>

    <TextView
        android:id="@+id/irrelevant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/heebo_light"
        android:textStyle="bold"
        android:textColor="#231F20"
        android:layout_below="@+id/their_message_body"
        android:layout_toRightOf="@+id/thumbs_down"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:textSize="8dp"
        android:text="Irrelevant"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/their_upvote"
        android:fontFamily="@font/heebo_light"
        android:textColor="#231F20"
        android:textStyle="bold"
        android:layout_below="@+id/their_comment_time"
        android:layout_toLeftOf="@+id/their_downvote"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:elevation="2dp"
        android:textSize="8dp"
        android:text="Upvote:0"
        android:visibility="visible"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/their_downvote"
        android:fontFamily="@font/heebo_light"
        android:textStyle="bold"
        android:textColor="#231F20"
        android:layout_below="@+id/their_comment_time"
        android:layout_toLeftOf="@+id/their_irrelevant"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:elevation="2dp"
        android:textSize="8dp"
        android:text="Downvote:0"
        android:visibility="visible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/their_irrelevant"
        android:fontFamily="@font/heebo_light"
        android:textStyle="bold"
        android:textColor="#231F20"
        android:layout_below="@+id/their_comment_time"
        android:layout_alignParentRight="true"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:elevation="2dp"
        android:textSize="8dp"
        android:text="Irrelevant:0"
        android:visibility="visible"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_reply_text_their_message"
        android:fontFamily="@font/heebo_light"
        android:textStyle="bold"
        android:textColor="#231F20"
        android:layout_below="@+id/their_irrelevant"
        android:layout_toLeftOf="@+id/view_all_reply_their_message"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:elevation="2dp"
        android:textSize="8dp"
        android:text="Reply"
        android:visibility="visible"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_all_reply_their_message"
        android:fontFamily="@font/heebo_light"
        android:textStyle="bold"
        android:textColor="#231F20"
        android:layout_below="@+id/their_irrelevant"
        android:layout_alignParentRight="true"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:elevation="2dp"
        android:textSize="8dp"
        android:text="View all replies"
        android:visibility="visible"/>


</RelativeLayout>